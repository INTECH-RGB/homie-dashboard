{
  "name": "homie-dashboard",
  "description": "IoT dashboard for Homie devices",
  "version": "1.0.0",
  "author": "RGB Team",
  "ava": {
    "babel": "inherit"
  },
  "babel": {
    "plugins": [
      "transform-es2015-modules-commonjs"
    ]
  },
  "bugs": "https://github.com/INTECH-RGB/homie-dashboard/issues",
  "contributors": [
    "Marvin ROGER",
    "Valentin GAUTHEY",
    "Matthieu BOISSADY"
  ],
  "dependencies": {
    "bunyan": "^1.8.4"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.18.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "nodemon": "^1.11.0",
    "shx": "^0.1.4"
  },
  "engines": {
    "node": "^7.0.0"
  },
  "homepage": "https://github.com/INTECH-RGB/homie-dashboard",
  "keywords": [
    "automation",
    "dashboard",
    "home",
    "homie",
    "iot",
    "mqtt"
  ],
  "license": "GPL-2.0",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/INTECH-RGB/homie-dashboard.git"
  },
  "scripts": {
    "build": "shx rm -r dist && babel src -d dist/src && shx cp package.json dist/",
    "serve": "node dist/src/index.js",
    "start": "nodemon src/index.js --exec babel-node --harmony-async-await | bunyan",
    "test": "ava"
  }
}
