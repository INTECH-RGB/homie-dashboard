{
  "name": "homie-dashboard",
  "description": "IoT dashboard for Homie devices",
  "version": "1.0.0",
  "author": "RGB Team",
  "ava": {
    "babel": "inherit",
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "plugins": [
      "transform-es2015-modules-commonjs",
      "transform-async-to-generator"
    ],
    "ignore": "test/**/*.js",
    "env": {
      "development": {
        "sourceMaps": "inline"
      }
    }
  },
  "bugs": "https://github.com/INTECH-RGBH/homie-dashboard/issues",
  "contributors": [
    "Marvin ROGER",
    "Valentin GAUTHEY",
    "Matthieu BOISSADY",
    "Hugo ZAMMIT"
  ],
  "dependencies": {
    "body-parser": "^1.15.2",
    "bunyan": "^1.8.4",
    "cookie": "^0.3.1",
    "dotenv": "^2.0.0",
    "express": "^4.14.0",
    "fast-json-patch": "^1.1.2",
    "mqtt": "^2.0.1",
    "sqlite": "^2.2.2",
    "toml": "^2.3.0",
    "uuid": "^3.0.0",
    "ws": "^1.1.1"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "axios": "^0.15.2",
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-plugin-transform-async-to-generator": "^6.16.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "babel-watch": "^2.0.3",
    "bulma": "^0.2.3",
    "coveralls": "^2.11.15",
    "cross-env": "^3.1.3",
    "eva.js": "^1.1.1",
    "eventemitter3": "^2.0.2",
    "font-awesome": "^4.7.0",
    "node-sass": "^3.11.3",
    "nyc": "^10.0.0",
    "sass-loader": "^4.0.2",
    "shx": "^0.2.0",
    "snazzy": "^5.0.0",
    "standard": "^8.5.0",
    "vbuild": "^4.0.0"
  },
  "engines": {
    "node": "^7.0.0"
  },
  "homepage": "https://github.com/INTECH-RGBH/homie-dashboard",
  "keywords": [
    "automation",
    "dashboard",
    "home",
    "homie",
    "iot",
    "mqtt"
  ],
  "license": "GPL-2.0",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/INTECH-RGBH/homie-dashboard.git"
  },
  "scripts": {
    "app-build": "cross-env BABEL_ENV=production vbuild",
    "app-dev": "vbuild --dev",
    "emulator-start": "babel-watch emulator/index.js | bunyan",
    "server-build": "cross-env BABEL_ENV=production babel server/ -d dist-server/src/ && shx cp package.json dist-server/",
    "server-dev": "babel-watch server/index.js | bunyan",
    "server-lint": "standard server/**/*.js | snazzy",
    "server-serve": "node src/index.js",
    "server-test": "nyc ava"
  }
}
