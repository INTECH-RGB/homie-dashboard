{
  "name": "homie-dashboard",
  "description": "IoT dashboard for Homie devices",
  "version": "1.0.0",
  "author": "RGB Team",
  "ava": {
    "babel": "inherit"
  },
  "babel": {
    "plugins": [
      "transform-es2015-modules-commonjs"
    ]
  },
  "bugs": "https://github.com/INTECH-RGB/homie-dashboard/issues",
  "contributors": [
    "Marvin ROGER",
    "Valentin GAUTHEY",
    "Matthieu BOISSADY"
  ],
  "dependencies": {
    "bunyan": "^1.8.4",
    "dotenv": "^2.0.0",
    "sqlite": "^2.2.2",
    "ws": "^1.1.1"
  },
  "devDependencies": {
    "ava": "^0.16.0",
    "babel-cli": "^6.18.0",
    "babel-plugin-transform-es2015-modules-commonjs": "^6.18.0",
    "eva.js": "^1.1.1",
    "nodemon": "^1.11.0",
    "shx": "^0.2.0",
    "standard": "^8.5.0",
    "vbuild": "^3.1.5"
  },
  "engines": {
    "node": "^7.0.0"
  },
  "homepage": "https://github.com/INTECH-RGB/homie-dashboard",
  "keywords": [
    "automation",
    "dashboard",
    "home",
    "homie",
    "iot",
    "mqtt"
  ],
  "license": "GPL-2.0",
  "main": "src/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/INTECH-RGB/homie-dashboard.git"
  },
  "scripts": {
    "app-build": "vbuild",
    "app-dev": "vbuild --dev",
    "server-build": "babel server/ -d dist-server/src/ && shx cp package.json dist-server/",
    "server-dev": "nodemon server/index.js --exec babel-node --harmony-async-await | bunyan",
    "server-lint": "standard server/**/*.js",
    "server-serve": "node --harmony-async-await src/index.js",
    "server-test": "ava"
  }
}
